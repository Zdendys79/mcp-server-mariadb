{
  "name": "mcp-server-mariadb",
  "version": "facekiwocuma",
  "description": "MCP (Model Context Protocol) server for MariaDB and MySQL databases. Enables Claude Code and other MCP clients to interact with databases through a secure, standardized interface.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "prebuild": "node tools/version-generator.js > /tmp/mcp-version.txt && node -e \"const fs=require('fs');const pkg=JSON.parse(fs.readFileSync('./package.json'));pkg.version=fs.readFileSync('/tmp/mcp-version.txt','utf8').trim();fs.writeFileSync('./package.json',JSON.stringify(pkg,null,2)+'\\n')\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mariadb",
    "mysql",
    "database",
    "claude",
    "claude-code",
    "ai",
    "llm"
  ],
  "author": "Zdendys",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zdendys79/mcp-server-mariadb.git"
  },
  "bugs": {
    "url": "https://github.com/Zdendys79/mcp-server-mariadb/issues"
  },
  "homepage": "https://github.com/Zdendys79/mcp-server-mariadb#readme",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE",
    ".mcp.json.template"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "mysql2": "^3.15.2"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "typescript": "^5.9.3"
  }
}
